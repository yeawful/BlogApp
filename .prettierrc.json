{
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "all",
    "bracketSpacing": true,
    "printWidth": 100,
    "importOrder": [
        "^(react|react-dom)$",
        "^(next|next-router)$",
        "^[a-z][a-z0-9-]+$",
        "^@[^/]+",
        "^~/(.*)$",
        "^[../]+",
        "^[./]",
        "^(.*).(css|scss|svg)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
